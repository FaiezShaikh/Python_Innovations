from selenium import webdriver

from webdriver_manager.chrome import ChromeDriverManager

from selenium.webdriver.common.by import By

from time import sleep

from selenium.webdriver.chrome.service import Service

import pyautogui as pt

import keyboard

driver = webdriver.Chrome(service=Service(ChromeDriverManager().install()))

driver.get('https://www.flipkart.com/')

driver.maximize_window()

sleep(5)

pt.click(1134, 191)

sleep(6)

driver.find_element(By.XPATH, '//*[@id="container"]/div/div[1]/div[1]/div[2]/div[2]/form/div/div/input').click()

sleep(3)

pt.typewrite('Smart Watch')

sleep(2)

driver.find_element(By.XPATH, '//*[@id="container"]/div/div[1]/div[1]/div[2]/div[2]/form/div/button/svg').click()

sleep(10)










